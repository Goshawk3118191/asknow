<section class="questions-container">
  <% @questions.each do |question| %>
    <% @question = question %>
    <%= render 'feed/question' %>
  <% end %>
</section>
<% if @total_pages %>
<section class="pages">
  <% @total_pages.times do |p| %>
    <% page = p + 1 %>
    <%= link_to page, params.merge(:page => page), :class => (page == @current_page.to_i ? "current-page" : "") %>
  <% end %>
</section>
<% end %>
